version: '3'

services:
  traefik:
    image: 'traefik:latest'
    networks:
      - {{ proxy_network }}
    ports:
      - '80:80'
      - '443:443'
    restart: always
    volumes:
      - '/var/run/docker.sock:/var/run/docker.sock'
      - './dynamic:/etc/traefik/dynamic:ro'
      - './traefik.yaml:/etc/traefik/traefik.yaml:ro'
      - '/etc/letsencrypt/live/{{ base_url }}:/etc/traefik/ssl:ro'

networks:
  {{ proxy_network }}:
    external: true
